// See https://bun.com/docs/typescript#suggested-compileroptions
{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,

    // All missing options are already defined in tsconfig.node.json
  }
}
